<form id="searchForArtists">
      <label for="firstNameInput">
        <textarea id="firstNameInput" name="firstNameInput" placeholder="Insert username here"></textarea>
      </label>
      <label for="lastNameInput">
        <textarea id="lastNameInput" name="lastNameInput" placeholder="Insert Lastname here"></textarea>
      </label>
      <button class="submit-button">Submit</button>
  </form>
<div id="searchResults"></div>
{{#if allArtists}}
    <ul class="card-container">
        {{#each allArtists}}
          <li class="card">
            <div class="artwork-item">
              <img src="{{this.profilePic}}" alt="Image of {{this.firstName}}" class="artwork-image">
              <h2 class="artwork-name">{{this.firstName}} {{this.lastName}}</h2> 
              <p class="artwork-description">{{this.bio}}</p> 
              <a href="/artist/{{this._id}}">
                <button class="buy-button">Visit Profile</button>
              </a>
            </div>
           </li>
        {{/each}}
    </div>
{{else}}
    <p>No Artists available at the moment.</p>
{{/if}}